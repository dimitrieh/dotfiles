# Activate for profiling and run in terminal
# zmodload zsh/zprof

# shortcut to this dotfiles path is $ZSH
export ZSH=$HOME/.dotfiles
export DOTFILES=$HOME/.dotfiles
export PROJECTS=$HOME/projects
export SELF_HOSTED=$HOME/self-hosted

# Bash and Zsh shell history suggest box, Zsh Config | https://github.com/dvorka/hstr
export HISTFILE=~/.zsh_history

export EDITOR="zed"
export VISUAL="zed"

# Stash your environment variables in ~/.localrc. This means they'll stay out
# of your main dotfiles repository (which may be public, like this one), but
# you'll have access to them in your scripts.
if [[ -a ~/.localrc ]]
then
  source ~/.localrc
fi

# all of our zsh files
typeset -U config_files
config_files=($ZSH/**/*.zsh)

# load the path files
for file in ${(M)config_files:#*/path.zsh}
do
  source $file
done

# load everything but the path and completion files
for file in ${${config_files:#*/path.zsh}:#*/completion.zsh}
do
  source $file
done

# Note: All completion setup (compinit + completion files) is now handled 
# by zsh-defer in performance.zsh for optimal startup performance.
# Loading completion files here would cause expensive compinit rebuilds
# and undermine the deferred loading strategy.

unset config_files

# resolve problems with runaway processes, closes them when closing the terminal
set +o nohup

# test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Activate for profiling and run in terminal
# zprof
export PKG_CONFIG_PATH="${HOMEBREW_PREFIX}/opt/icu4c/lib/pkgconfig:$PKG_CONFIG_PATH"

# Claude Code workaround for EBADF crash on Kill Bash
# See: https://github.com/anthropics/claude-code/issues/3157
export BASH_DEFAULT_TIMEOUT_MS=600000  # 10 minutes timeout to prevent Kill Bash crashes

