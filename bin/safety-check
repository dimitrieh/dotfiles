#!/bin/bash
filevault_check() {
  fdesetup status
}

firewall_check() {
  firewall_state="$(defaults read /Library/Preferences/com.apple.alf globalstate)"
  [[ $firewall_state == "1" ]] && echo "Firewall On." || echo "Firewall off."
}

flash_installed() {
  if [ -e "/Library/Internet Plug-Ins/Flash Player.plugin" ]; then
    echo "Flash Player installed."
  else
    echo "Flash Player not found."
  fi
}

filevault_check
firewall_check
flash_installed
