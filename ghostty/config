# Theme
theme = light:Gruvbox Light,dark:Github Dark Default
window-padding-color = background

# Font
font-family = "Geist Mono"
font-size = 16
font-feature = -lira

# Correct non blinking clear cursor
cursor-style = bar
cursor-style-blink = false
adjust-cursor-thickness = 200%
cursor-opacity = 1.0

# Quick Terminal Config
quick-terminal-position = right
quick-terminal-autohide = true
quick-terminal-size = 40%,100%

# Keybindings
keybind = super+shift+right=new_split:right
keybind = super+shift+down=new_split:down
keybind = alt+left=esc:B
keybind = alt+right=esc:F
keybind = global:super+shift+ctrl+alt+k=toggle_quick_terminal
